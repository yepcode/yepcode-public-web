---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;
const { href, class: className, ...props } = Astro.props;
---

<a
  href={href}
  class:list={[
    "px-5 py-3 hover:bg-[#121220] rounded-xl focus:outline-none focus:ring-2 focus:ring-[#11c0eb]",
    className,
  ]}
  {...props}
>
  <slot />
</a>
