---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
}

const { title, description, image } = Astro.props;
---

<div
  class="flex flex-col gap-4 bg-[#121220] p-8 rounded-xl border-2 border-[#ffffff1a]"
>
  <Image
    class="p-2 aspect-square size-10 rounded-xl bg-[#22242f] text-white"
    src={image}
    alt="Code Icon"
  />
  <h3>{title}</h3>
  <p class="text-white/70 text-md">{description}</p>
</div>
