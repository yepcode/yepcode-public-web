---
interface Props {
  formId: string;
  portalId: string;
  region: string;
  version: string;
}

const { formId, portalId, region, version } = Astro.props;
---

<script
  is:inline
  charset="utf-8"
  type="text/javascript"
  src={`//js-${region}.hsforms.net/forms/v2.js`}></script>
<script is:inline define:vars={{ region, portalId, formId, version }}>
  hbspt.forms.create({
    region,
    portalId,
    formId,
    version,
  });
</script>
